@model CineMate.Data.Entities.Seat

@{
    ViewData["Title"] = "Delete Seat";
}

<h1>Delete Seat</h1>

<dl class="row">
    <dt class="col-sm-2">Screening</dt>
    <dd class="col-sm-10">
        @Model.Screening.Cinema.Name — @Model.Screening.Movie.Title @Model.Screening.StartTime.ToString("g")
    </dd>

    <dt class="col-sm-2">Row</dt>
    <dd class="col-sm-10">@Model.Row</dd>

    <dt class="col-sm-2">Number</dt>
    <dd class="col-sm-10">@Model.Number</dd>

    <dt class="col-sm-2">Available</dt>
    <dd class="col-sm-10">@Model.IsAvailable</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</form>
