@{
    ViewData["Title"] = "Welcome";
}

@section Styles {
    <style>
        /* HERO */
        .hero-wrap {
            position: relative;
            border-radius: 20px;
            overflow: hidden;
            background: radial-gradient(1200px 500px at 20% -10%, rgba(99,102,241,.35), transparent 60%), radial-gradient(800px 400px at 100% 0%, rgba(236,72,153,.25), transparent 60%), linear-gradient(180deg, #0d1117 0%, #151b23 100%);
            color: #fff;
        }

        .hero-content {
            padding: 56px 28px;
        }

        .hero-title {
            font-weight: 800;
            letter-spacing: .2px;
        }

        .hero-sub {
            opacity: .9;
            max-width: 760px;
        }

        .hero-promo {
            position: relative;
            min-height: 220px;
            border-radius: 16px;
            overflow: hidden;
            background: url("/images/posters/movie-theater-popcorn.webp") center/cover no-repeat;
            background-color: #0b1320;
        }

            .hero-promo::after {
                content: "";
                position: absolute;
                inset: 0;
                background: linear-gradient(135deg, rgba(0,0,0,.55), rgba(0,0,0,.25));
            }

            .hero-promo .promo-text {
                position: relative;
                z-index: 1;
                height: 100%;
                display: flex;
                align-items: center;
                justify-content: center;
                text-align: center;
                color: #fff;
                padding: 18px;
                text-shadow: 0 2px 6px rgba(0,0,0,.6);
            }

        .section-title {
            font-weight: 700;
            letter-spacing: .2px;
        }

        .movie-card {
            border: 0;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 30px rgba(0,0,0,.08);
            transition: .2s transform,.2s box-shadow;
        }

            .movie-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 40px rgba(0,0,0,.12);
            }

        .movie-thumb {
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .movie-thumb.has-img {
                padding: 0;
                background: none;
                height: auto;
            }

                .movie-thumb.has-img img {
                    width: 100%;
                    height: 200px;
                    object-fit: cover;
                    display: block;
                }

        .movie-meta {
            font-size: .9rem;
            color: #6b7280;
        }

        .feature {
            border-radius: 16px;
            border: 1px solid #eef0f3;
            padding: 22px;
            background: #fff;
            height: 100%;
        }

            .feature h5 {
                margin: 0 0 .25rem 0;
            }

        .cta {
            background: linear-gradient(90deg, rgba(99,102,241,.12), rgba(236,72,153,.12));
            border: 1px solid rgba(99,102,241,.25);
            border-radius: 18px;
            padding: 20px;
        }

        @@media (max-width: 576px) {
            .hero-content {
                padding: 32px 18px;
            }

            .movie-thumb {
                height: 170px;
            }

                .movie-thumb.has-img img {
                    height: 170px;
                }
        }
    </style>
}

<div class="hero-wrap mb-4">
    <div class="hero-content container">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 hero-title mb-2">Welcome to <span class="text-primary">CineMate</span></h1>
                <p class="lead hero-sub mb-4">
                    Choose <strong>a city</strong> and <strong>a cinema</strong> from the top menu. We’ll show you the schedule and the best screenings this week.
                </p>
                <a class="btn btn-lg btn-outline-light" href="/Movies">Browse movies</a>
            </div>
            <div class="col-lg-5">
                <div class="hero-promo">
                    <div class="promo-text">
                        <div>
                            <div class="fs-4 fw-bold">🎬 Movie Night Ready</div>
                            <div class="opacity-75">get tickets in 3 minutes — no queues</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">

    <!-- Popular this week -->
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h3 class="section-title m-0">Popular this week</h3>
        <a href="/Movies" class="text-decoration-none">See all</a>
    </div>

    <div class="row g-3 mb-4">
        <!-- Mission: Impossible – Retribution -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card movie-card position-relative">
                <div class="movie-thumb has-img">
                    <img src="/images/posters/mission-impossible-retribution.jpg"
                         alt="Mission: Impossible – Retribution" loading="lazy">
                </div>
                <div class="card-body">
                    <h6 class="card-title mb-1">Mission: Impossible – Retribution</h6>
                    <div class="movie-meta">Action • 156 min</div>
                </div>
                <a asp-controller="Movies"
                   asp-action="DetailsByTitle"
                   asp-route-title="Mission: Impossible – Retribution"
                   class="stretched-link"
                   aria-label="Open Mission: Impossible – Retribution details"></a>
            </div>
        </div>

        <!-- The Fantastic Four: First Steps -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card movie-card position-relative">
                <div class="movie-thumb has-img">
                    <img src="/images/posters/the-fantastic-four-first-steps.jpg"
                         alt="The Fantastic Four: First Steps" loading="lazy">
                </div>
                <div class="card-body">
                    <h6 class="card-title mb-1">The Fantastic Four: First Steps</h6>
                    <div class="movie-meta">Adventure • 135 min</div>
                </div>
                <a asp-controller="Movies"
                   asp-action="DetailsByTitle"
                   asp-route-title="The Fantastic Four: First Steps"
                   class="stretched-link"
                   aria-label="Open The Fantastic Four: First Steps details"></a>
            </div>
        </div>

        <!-- Zootopia 2 -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card movie-card position-relative">
                <div class="movie-thumb has-img">
                    <img src="/images/posters/zootopia-2.jpg"
                         alt="Zootopia 2" loading="lazy">
                </div>
                <div class="card-body">
                    <h6 class="card-title mb-1">Zootopia 2</h6>
                    <div class="movie-meta">Animation • 110 min</div>
                </div>
                <a asp-controller="Movies"
                   asp-action="DetailsByTitle"
                   asp-route-title="Zootopia 2"
                   class="stretched-link"
                   aria-label="Open Zootopia 2 details"></a>
            </div>
        </div>

        <!-- 28 Years Later -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card movie-card position-relative">
                <div class="movie-thumb has-img">
                    <img src="/images/posters/28-years-later.jpg"
                         alt="28 Years Later" loading="lazy">
                </div>
                <div class="card-body">
                    <h6 class="card-title mb-1">28 Years Later</h6>
                    <div class="movie-meta">Thriller • 122 min</div>
                </div>
                <a asp-controller="Movies"
                   asp-action="DetailsByTitle"
                   asp-route-title="28 Years Later"
                   class="stretched-link"
                   aria-label="Open 28 Years Later details"></a>
            </div>
        </div>
    </div>

    <!-- Features -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="feature">
                <div class="fw-semibold mb-1">⚡ Fast reservations</div>
                <div class="text-muted">Pick seats on an interactive map and pay in seconds.</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature">
                <div class="fw-semibold mb-1">🎟️ Flexible tickets</div>
                <div class="text-muted">Adult, Teen and Kids categories — all on one page.</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature">
                <div class="fw-semibold mb-1">📍 Local schedules</div>
                <div class="text-muted">Browse by city and cinema — like the big cinema sites.</div>
            </div>
        </div>
    </div>

    <!-- CTA -->
    <div class="cta d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-5">
        <div class="fw-semibold">
            Ready? Pick a cinema above and see this week’s screenings.
        </div>
        <div>
            <a class="btn btn-outline-primary ms-2" href="/Screenings">View all</a>
        </div>
    </div>
</div>
