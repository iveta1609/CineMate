@model CineMate.Data.Entities.Reservation
@{
    ViewData["Title"] = "Delete Reservation";
}
<h1>@ViewData["Title"]</h1>
<h3>Are you sure you want to delete this?</h3>
<dl class="row">
    <dt class="col-sm-2">Movie</dt>
    <dd class="col-sm-10">@Model.Screening.Movie.Title</dd>
    <dt class="col-sm-2">Cinema</dt>
    <dd class="col-sm-10">@Model.Screening.Cinema.Name</dd>
    <dt class="col-sm-2">Time</dt>
    <dd class="col-sm-10">@Model.ReservationTime</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="Index" class="btn btn-secondary">No, back</a>
</form>
