@model CineMate.Data.Entities.Reservation
@{
    ViewData["Title"] = "Make Reservation";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Create">
    <input type="hidden" asp-for="ScreeningId" />
    <div class="form-group">
        <label>Screening:</label>
        @* По желание покажи детайли на прожекцията чрез ViewBag или допълнителен модел *@
    </div>
    <button type="submit" class="btn btn-primary">Reserve</button>
    <a asp-controller="Screenings" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
