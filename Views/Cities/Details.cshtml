@model CineMate.Data.Entities.City
@{
    ViewData["Title"] = "City details";
}

@section Styles {
    <style>
        .page-hero {
            background: linear-gradient(90deg,#232746,#41223f);
            border-radius: 16px;
            padding: 18px 22px;
            color: #fff;
            margin-bottom: 16px
        }
    </style>
}

<div class="page-hero">
    <h2 class="m-0">City details</h2>
</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
</dl>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    @* Няма Delete *@
</div>
