@model CineMate.Data.Entities.Screening

@{
    ViewData["Title"] = "Delete Screening";
}

<h1>Delete Screening</h1>

<dl class="row">
    <dt class="col-sm-2">Cinema</dt>
    <dd class="col-sm-10">@Model.Cinema.Name</dd>
    <dt class="col-sm-2">Movie</dt>
    <dd class="col-sm-10">@Model.Movie.Title</dd>
    <dt class="col-sm-2">Start Time</dt>
    <dd class="col-sm-10">@Model.StartTime.ToString("f")</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</form>
