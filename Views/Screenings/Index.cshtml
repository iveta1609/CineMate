@model IEnumerable<CineMate.Data.Entities.Screening>
@{
    ViewData["Title"] = "Screenings";
}

<h1>Screenings</h1>
<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Cinema</th>
            <th>Movie</th>
            <th>Start Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Cinema.Name</td>
                <td>@s.Movie.Title</td>
                <td>@s.StartTime.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@s.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                    <a asp-action="SelectSeats" asp-route-id="@s.Id">Select Seats</a>
                </td>
            </tr>
        }
    </tbody>
</table>
